service rsync
{
        disable = no
        socket_type     = stream
        wait            = no
        user            = root
#       server          = /usr/bin/rsync
#       server_args     = --daemon
        server          = /usr/bin/ionice
        server_args     =  -c 3 /usr/bin/rsync  --daemon
        log_on_failure  += USERID
}

